<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Launch (splash) theme used by Flutter embedding to show native splash -->
    <style name="LaunchTheme" parent="@style/Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- If you have a drawable for the native splash, set it here -->
        <!-- Replace @drawable/launch_background with your actual drawable if different -->
        <item name="android:windowBackground">@drawable/launch_background</item>
    </style>

    <!-- App normal theme -->
    <style name="NormalTheme" parent="@style/Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <!-- keep status bar transparent if you want fullscreen behind status bar -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- Add other theme items you need -->
    </style>
</resources>
